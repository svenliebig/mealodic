{
  "id": "mealodic",
  "realm": "mealodic",
  "enabled": true,
  "registrationAllowed": true,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "roles": {
    "realm": [
      {
        "name": "user",
        "description": "Regular user with access to personal features"
      },
      {
        "name": "admin",
        "description": "Administrator with full access"
      }
    ]
  },
  "defaultRoles": ["user"],
  "clients": [
    {
      "clientId": "mealodic-web",
      "name": "Mealodic Web App",
      "enabled": true,
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "rootUrl": "http://localhost:5173",
      "baseUrl": "/",
      "redirectUris": [
        "http://localhost:5173/*",
        "http://localhost/*"
      ],
      "webOrigins": [
        "http://localhost:5173",
        "http://localhost"
      ],
      "protocol": "openid-connect"
    },
    {
      "clientId": "mealodic-api",
      "name": "Mealodic API",
      "enabled": true,
      "bearerOnly": true,
      "protocol": "openid-connect"
    }
  ],
  "users": [
    {
      "username": "dev@mealodic.local",
      "email": "dev@mealodic.local",
      "firstName": "Dev",
      "lastName": "User",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "dev",
          "temporary": false
        }
      ],
      "realmRoles": ["user"]
    }
  ]
