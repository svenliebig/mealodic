# =============================================================================
# Mealodic - Local Development Environment Variables
# =============================================================================
# Copy this file to .env and adjust values as needed:
#   cp .env.example .env

# -----------------------------------------------------------------------------
# PostgreSQL
# -----------------------------------------------------------------------------
POSTGRES_USER=mealodic
POSTGRES_PASSWORD=mealodic_dev
POSTGRES_DB=mealodic

# -----------------------------------------------------------------------------
# Keycloak
# -----------------------------------------------------------------------------
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KC_DB=postgres
KC_DB_URL=jdbc:postgresql://db:5432/mealodic
KC_DB_USERNAME=mealodic
KC_DB_PASSWORD=mealodic_dev

# Keycloak realm configuration
KEYCLOAK_REALM=mealodic
KEYCLOAK_CLIENT_ID=mealodic-web
KEYCLOAK_CLIENT_ID_API=mealodic-api
KEYCLOAK_CLIENT_SECRET_API=change-me-api-secret

# -----------------------------------------------------------------------------
# API
# -----------------------------------------------------------------------------
API_PORT=3000
API_HOST=0.0.0.0
DATABASE_URL=postgresql://mealodic:mealodic_dev@db:5432/mealodic
KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_REALM_URL=http://keycloak:8080/realms/mealodic
KEYCLOAK_BASE_URL=http://localhost:8080

# -----------------------------------------------------------------------------
# Web
# -----------------------------------------------------------------------------
WEB_PORT=5173
VITE_API_URL=http://localhost:3000
VITE_KEYCLOAK_URL=http://localhost:8080
VITE_KEYCLOAK_REALM=mealodic
VITE_KEYCLOAK_CLIENT_ID=mealodic-web
